{
    "python.defaultInterpreterPath": "./.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    
    // Testing Configuration
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "-v",
        "--tb=short",
        "./tests"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    
    // Python Path Configuration for Microservices
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/tests", 
        "${workspaceFolder}/shared",
        "${workspaceFolder}/services/outlook-relay/src",
        "${workspaceFolder}/services/report-generator/src",
        "${workspaceFolder}/services/database-service/src",
        "${workspaceFolder}/services/scheduler-service/src",
        "${workspaceFolder}/services/email-service/src"
    ],
    
    // Environment Configuration
    "python.envFile": "${workspaceFolder}/.env",
    
    // Code Quality
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    
    // Terminal Environment for Linux/WSL
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/tests:${workspaceFolder}/shared:${workspaceFolder}/services"
    },
    
    // File Associations
    "files.associations": {
        "*.toml": "toml",
        "*.yml": "yaml",
        "*.yaml": "yaml"
    },
    
    // Editor Configuration
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    
    // Exclude patterns for cleaner workspace
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "**/.git": false
    },
    
    // Search configuration
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/logs": true
    }
}
